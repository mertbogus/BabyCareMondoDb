
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Spinner Start -->
<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->
<!-- Navbar start -->
@await Component.InvokeAsync("_UILayoutNavbarComponent")
<!-- Navbar End -->
<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->
<!-- Hero Start -->
@await Component.InvokeAsync("_UILayoutHeroComponent")
<!-- Hero End -->
<!-- About Start -->
@await Component.InvokeAsync("_UILayoutAboutComponent")
<!-- About End -->
<!-- Service Start -->
@await Component.InvokeAsync("_UILayoutServiceComponent")
<!-- Service End -->
<!-- Programs Start -->
@await Component.InvokeAsync("_UILayoutProgramsComponent")
<!-- Program End -->
<!-- Events Start -->
@await Component.InvokeAsync("_UILayoutEventsComponent")
<!-- Events End-->
<!-- Team Start-->
@await Component.InvokeAsync("_UILayoutTeamComponent")
<!-- Team End-->
<!-- Testimonial Start -->
@await Component.InvokeAsync("_UILayoutTestimonialComponent")
<!-- Testimonial End -->
<!-- Footer Start -->
@await Component.InvokeAsync("_UILayoutFooterComponent")
<!-- Footer End -->
<!-- Copyright Start -->
@await Component.InvokeAsync("_UILayoutCopyrightComponent")
<!-- Copyright End -->
<!-- Back to Top -->
<a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>
