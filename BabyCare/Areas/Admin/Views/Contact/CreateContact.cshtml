@model CreateContactDto 
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3 class="text-center mb-4">Yeni İletişim Bilgisi  Ekle </h3>
@if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Address">Adres</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Adres Giriniz." />
    </div>


    <div class="form-group">
        <label for="Mail">Mail</label>
        <input type="email" asp-for="Mail" class="form-control" rows="4" placeholder="Mail Giriniz"/>
    </div>

    <div class="form-group">
        <label for="TelephoneNumber">Telefon Numarası</label>
        <input type="tel" asp-for="TelephoneNumber" class="form-control" rows="4" placeholder="Telefon Numarası Giriniz" />
    </div>

    <div class="form-group">
        <label for="SubsectionDesc">Abone Ol Açıklaması </label>
        <textarea  asp-for="SubsectionDesc" class="form-control" rows="3" placeholder="Abone Ol Kısmı İçin Açıklama Giriniz."></textarea>
    </div>

    <div class="form-group">
        <label for="TwitterUrl">Twitter</label>
        <input type="text" asp-for="TwitterUrl" class="form-control" placeholder="URL Giriniz." />
    </div>

    <div class="form-group">
        <label for="LinkledinUrl">Linkledin</label>
        <input type="text" asp-for="LinkledinUrl" class="form-control" placeholder="URL Giriniz." />
    </div>

    <div class="form-group">
        <label for="FacebookUrl">Facebook</label>
        <input type="text" asp-for="FacebookUrl" class="form-control" placeholder="URL Giriniz." />
    </div>

    <div class="form-group">
        <label for="InstagramUrl">Instagram</label>
        <input type="text" asp-for="InstagramUrl" class="form-control" placeholder="URL Giriniz." />
    </div>

    <!-- Kaydet Butonu -->
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
    </div>
</form>

