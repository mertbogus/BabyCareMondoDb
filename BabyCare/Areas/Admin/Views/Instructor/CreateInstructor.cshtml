@model CreateInstructorDto
@{
    ViewData["Title"] = "CreateInstructor";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3 class="text-center mb-4">Yeni Ürün Ekle</h3>

<form method="post" enctype="multipart/form-data">

    @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <!-- Ürün Görseli -->
    <div class="form-group">
        <label for="ImageFile">Ürün Görseli</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="ImageFile" name="ImageFile" />
            <label class="custom-file-label" for="ImageFile">Bir görsel seçin...</label>
        </div>
        <small class="form-text text-muted">Yalnızca .jpg, .jpeg, .png formatlarında dosya yükleyebilirsiniz.</small>
    </div>

    <div class="form-group">
        <label for="FirstName">Eğitmen Adı</label>
        <input type="text"  asp-for="FirstName" class="form-control" placeholder="Eğitmen Adı Girin" />
    </div>
   
    <div class="form-group">
        <label for="LastName">Ürün Eğitmen Soyadı</label>
        <textarea  asp-for="LastName" class="form-control" rows="4" placeholder="Eğitmenin Soyadını Giriniz"></textarea>
    </div>

 
    <div class="form-group">
        <label for="Title">Eğitmen Ünvanı</label>
        <input type="number" asp-for="Title" class="form-control" placeholder="Eğitmenin Pozisiyonunu Girin" />
    </div>

    <div class="form-group">
        <label for="TwitterUrl">Eğitmen Twitter URL</label>
        <input type="text"  asp-for="TwitterUrl" class="form-control" placeholder="Eğitmenin Twitter Hesabı Linkini Giriniz." />
    </div>

    <div class="form-group">
        <label for="LinkledinUrl">Eğitmen Linkledin URL</label>
        <input type="text" asp-for="LinkledinUrl" class="form-control" placeholder="Eğitmenin Linkledin Hesabı Linkini Giriniz." />
    </div>

    <div class="form-group">
        <label for="InstagramUrl">Eğitmen Instagram URL</label>
        <input type="text" asp-for="InstagramUrl" class="form-control" placeholder="Eğitmenin Linkledin Hesabı Linkini Giriniz." />
    </div>
    <!-- Kaydet Butonu -->
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
    </div>
</form>