@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3 class="text-center mb-4">Yeni Yorum Ekle</h3>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ImageFile">Görsel</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="ImageFile" name="ImageFile" />
            <label class="custom-file-label" for="ImageFile">Bir görsel seçin...</label>
        </div>
        <small class="form-text text-muted">Yalnızca .jpg, .jpeg, .png formatlarında dosya yükleyebilirsiniz.</small>
    </div>

    <div class="form-group">
        <label for="CommenterFullName">Yorum Yapanın Ad Soyad</label>
        <input type="text"  asp-for="CommenterFullName" class="form-control" placeholder="Ad Soyad Girin." />
    </div>

    <div class="form-group">
        <label for="Description">Yorumu</label>
        <textarea id="Description" asp-for="Description" class="form-control" rows="4" placeholder="Yorumu Giriniz."></textarea>
    </div>

    <div class="form-group">
        <label for="Rating">Puan</label>
        <input type="number" id="Price" asp-for="Rating" class="form-control" placeholder="1-5 ile beş arası puan veriniz." />
    </div>

    <!-- Kaydet Butonu -->
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
    </div>
</form>

