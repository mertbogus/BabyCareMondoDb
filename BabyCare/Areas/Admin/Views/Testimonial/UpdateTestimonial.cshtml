@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3 class="text-center mb-4">Yorum Güncelleme</h3>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <!-- Mevcut Yüklenmiş Resmi Göster -->
        @if (!string.IsNullOrEmpty(Model.CommenterImage))
        {
            <div class="mb-3">
                <img src="@Model.CommenterImage" alt="Mevcut Resim" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;" />
            </div>
            <div class="alert alert-info">
                <strong>Mevcut Resim:</strong> Mevcut ürün görseli yukarıda gösterilmektedir. Yeni bir görsel yüklemek isterseniz, aşağıdan seçebilirsiniz.
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <strong>Uyarı:</strong> Bu ürün için herhangi bir görsel yüklenmemiş.
            </div>
        }
        <label for="ImageFile">Görsel</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="ImageFile" name="ImageFile" />
            <label class="custom-file-label" for="ImageFile">Bir görsel seçin...</label>
        </div>
        <small class="form-text text-muted">Yalnızca .jpg, .jpeg, .png formatlarında dosya yükleyebilirsiniz.</small>
    </div>
    <input type="hidden" asp-for="TestimonialId" />
    <div class="form-group">
        <label for="CommenterFullName">Yorum Yapanın Ad Soyad</label>
        <input type="text" asp-for="CommenterFullName" class="form-control" placeholder="Ad Soyad Girin." />
    </div>

    <div class="form-group">
        <label for="Description">Yorumu</label>
        <textarea id="Description" asp-for="Description" class="form-control" rows="4" placeholder="Yorumu Giriniz."></textarea>
    </div>

    <div class="form-group">
        <label for="Rating">Puan</label>
        <input type="number" id="Price" asp-for="Rating" class="form-control" placeholder="1-5 ile beş arası puan veriniz." />
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Güncelle</button>
    </div>
</form>

